{% set appMainMenu = false %}

{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="login">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1>Deine Ausgabenapp</h1>
            <div class="row">
                <div class="col-12 text-center">
                    <img src="{{ asset('assets/logo.svg') }}" alt="logo">
                </div>
            </div>
            <hr>

            <label for="inputEmail" class="sr-only">E-Mail</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="E-Mail" required autofocus>
            <label for="inputPassword" class="sr-only">Passwort</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Passwort" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn btn-lg btn-primary" type="submit">
                Einloggen
            </button>
        </form>
    </div>
{% endblock %}
